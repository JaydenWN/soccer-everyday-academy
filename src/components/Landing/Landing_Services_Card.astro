---
import { Image } from "astro:assets";
import PrimaryButton from "../common/Primary_Button.astro";
import contactIcon from "@icons/contact-black.svg";

const { title, text, ctaText, image } = Astro.props;
---

<div class="service-card">
    <Image src={image} alt="" class="image" />
    <div class="text-content">
        <h3>{title}</h3>
        <p>{text}</p>
        <PrimaryButton
            text={ctaText}
            link="/contact"
            variant="yellow"
            icon={contactIcon}
        />
    </div>
</div>

<style>
    .service-card {
        display: flex;
        width: 100%;
        flex-direction: column;
        background-color: var(--dark);
        color: white;
        box-shadow:
            rgba(0, 0, 0, 0.1) 0px 0px 5px 0px,
            rgba(0, 0, 0, 0.1) 0px 0px 1px 0px;
    }
    .text-content {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 1rem;
    }
    h3 {
        font-size: 1.65em;
    }
    .image {
        height: 225px;
        width: 100%;
        object-fit: cover;
    }
    p {
        margin-bottom: 1rem;
    }

    @media (min-width: 768px) {
        .service-card {
            width: calc(50% - 1rem);
            box-sizing: border-box;
        }
        .image {
            height: fit-content;
        }
        .text-content {
            padding: 2rem;
        }
    }

    @media (min-width: 1024px) {
        .service-card {
            flex-direction: row;
            width: 100%;
            max-width: 865px;
            margin: 0px auto;
        }
        .image {
            height: auto;
            width: 45%;
        }
        .text-content {
            padding: 3rem;
        }
    }
    @media (min-width: 1440px) {
        .service-card {
            flex-direction: column;
            width: calc(33% - 1rem);
            margin: 0px;
        }
        .image {
            height: auto;
            width: 100%;
            aspect-ratio: 1/1;
        }
        .text-content {
            padding: 3rem;
            height: 100%;
        }
        .text-content :global(a) {
            margin-top: auto;
        }
    }
</style>
