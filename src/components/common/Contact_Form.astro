---
import SendIcon from "@icons/send-black.svg";
---

<form action="">
    <div class="input-area">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" required />
    </div>

    <div class="input-area">
        <label for="email">Email</label>
        <input type="email" name="email" id="name" required />
    </div>

    <div class="input-area">
        <label for="phone">Phone</label>
        <input type="tel" name="phone" id="phone" required />
    </div>

    <div class="input-area">
        <label for="message">Message</label>
        <textarea rows="12" name="message" id="name" required></textarea>
    </div>

    <button><SendIcon />Submit Message</button>
</form>

<style>
    form {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }
    .input-area {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    input,
    textarea {
        font-size: 1em;
        padding: 0.5rem;
        font-family: "paragraph";
    }

    button {
        width: fit-content;
        padding: 0.5rem 1rem;
        background-color: var(--yellow);
        font-family: "heading";
        font-size: 1.2em;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        border: 0px;
        color: black;
        text-decoration: none;
    }
</style>
